<!--pages/join/join.wxml-->
<view class="container">
  <view class="title-box">
    <text class="title">请输入学号</text>
  </view>
  <view class="ipt-box">
    <input class="ipt" placeholder-style="color:#10a0ea" placeholder="在此键入学号" bindinput="listen" auto-focus/>
  </view>
  <view class="btn-box">
    <loading hidden="{{hidden}}">
      加载中
    </loading>
    <button bindtap="bindViewTapJoin" class="btn" hover-class="hover" hover-stay-time="200"> {{ state }} </button>
  </view>
</view>